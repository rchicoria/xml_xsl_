<script type="text/javascript">
    var menuIdElement = "";
    var menuIdCounter = 0;
    var infoMenu = (function (){
        var menuUrl = [];
        var menuTitle = [];
        var menuId = [];

        function pushMenu(id, title, url){
            pushId(id);
            pushTitle(title);
            pushUrl(url);
        }

        function popMenu(id, title, url){
            popTitle(id);
            popTitle(title);
            popUrl(url);
        }

        function pushUrl(element){
            menuUrl[menuUrl.length] = element;
        }

        function popUrl(element){
            menuUrl = popElement(menuUrl, element);
        }

        function popTitle(element){
            menuTitle = popElement(menuTitle, element);
        }
        function pushTitle(element){
            menuTitle[menuTitle.length] = element;
        }

        function popId(element){
            menuId = popElement(menuId, element);
        }
        function pushId(element){
            menuId[menuId.length] = element;
        }

        function getMenuIdByUrl(url){
            var returnInfo = "";
            //retira parametros
            var locationInfo = url.toString().split("?");
            if(locationInfo != null && locationInfo.length > 0){
                var infoPos = jQuery.inArray(jQuery.trim(locationInfo[0]), menuUrl);

                if(infoPos != -1){
                    returnInfo = menuId[infoPos];
                }
            }
            return returnInfo
        }

        function popElement(arrayTarget, element){
            arrayTarget = jQuery.grep(arrayTarget, function(value) {
                return value != element;
            });
            return arrayTarget;
        }

        function toString(){
            var string = "";
            for(var i=0; i<menuTitle.length;i++){
                string += menuId[i] + ": " + menuTitle[i] + ": " + menuUrl[i] + "\n";
            }

            return string;
        }

        return {
            popMenu: popMenu,
            pushMenu: pushMenu,
            getMenuIdByUrl: getMenuIdByUrl,
            toString: toString
        };
    }());
</script>

